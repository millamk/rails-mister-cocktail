<div class="container">
  <div class="cards mt-5">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>') ">
        <h2><%= @cocktail.name %></h2>
    </div>
  </div>
</div>

<div class="container mt-5">
  <h4>Ingredients</h4>
  <% @doses.each do |dose| %>
    <p><%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
    </p>
  <% end %>

  <%= link_to "Back to menu", root_path, class: "btn btn-flat" %>
  <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-flat" %>
</div>
