<div class="container">
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <h2><%= @cocktail.name %></h2>
  <% @doses.each do |dose| %>
  <p><%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </p>
  <% end %>
  <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>
</div>

