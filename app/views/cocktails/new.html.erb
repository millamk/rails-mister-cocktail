
<div class="container">
<h1> Add a new cocktail: </h1>
<%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit 'Create Cocktail', class: 'btn btn-flat' %>
<% end %>
<%= link_to "Back to menu", root_path %>
</div>
